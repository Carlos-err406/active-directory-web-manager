{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"title": "Config",
	"description": "Application configuration settings",
	"properties": {
		"system": {
			"additionalProperties": false,
			"type": "object",
			"description": "System settings",
			"properties": {
				"logging": {
					"additionalProperties": false,
					"type": "object",
					"description": "Logging settings",
					"properties": {
						"useLogging": {
							"type": "boolean",
							"default": false,
							"description": "Enable or disable logging. If `false` `basePath` is ignored. If `true` `basePath` is required @default ./logs"
						},
						"logTemplate": {
							"type": "string",
							"default": "[{date}] {url}{urlSearchParams} {method} {status}",
							"description": "Log template as indicated by @link https://www.npmjs.com/package/sveltekit-logger-hook @default \"[{date}] {url}{urlSearchParams} {method} {status}\""
						},
						"logDateTemplate": {
							"type": "string",
							"default": "\"YYYY-MM-DD HH:mm:ss A\"",
							"description": "Log date template as indicated by @link https://day.js.org/docs/en/display/format @default \"YYYY-MM-DD HH:mm:ss A\""
						},
						"decodeSearchParams": {
							"type": "boolean",
							"default": false,
							"description": "Enable or disable url search params decoding. @default false"
						},
						"basePath": {
							"description": "Logging paths. Where the app and system logs will be stored",
							"type": "string",
							"default": "./logs/",
							"format": "path"
						}
					}
				}
			}
		},
		"app": {
			"additionalProperties": false,
			"description": "Interface configuration settings",
			"properties": {
				"views": {
					"type": "object",
					"additionalProperties": false,
					"description": "configuration reggarding de different pages of the web app",
					"properties": {
						"usersPage": {
							"type": "object",
							"additionalProperties": false,
							"description": "configuration reggarding the users page",
							"properties": {
								"table": {
									"type": "object",
									"additionalProperties": false,
									"properties": {
										"columns": {
											"type": "object",
											"additionalProperties": false,
											"properties": {
												"jpegPhoto": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "jpegPhoto"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"sAMAccountName": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "sAMAccountName"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"displayName": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "displayName"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"givenName": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "givenName"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"sn": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "sn"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"mail": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "mail"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"description": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "description"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"dn": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "distinguishedName"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"userAccountControl": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "userAccountControl"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"whenCreated": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "whenCreated"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												}
											}
										}
									}
								}
							}
						},
						"groupsPage": {
							"type": "object",
							"additionalProperties": false,
							"description": "configuration reggarding the groups page",
							"properties": {
								"show": {
									"type": "boolean",
									"default": true,
									"description": "Weather or not to show the /groups page in navigation. Accessing directly to this route will result on a '403 This page has been disabled by configuration' error"
								},
								"table": {
									"type": "object",
									"additionalProperties": false,
									"properties": {
										"columns": {
											"type": "object",
											"additionalProperties": false,
											"properties": {
												"sAMAccountName": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "sAMAccountName"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"mail": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "mail"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"dn": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "distinguishedName"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"description": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "description"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"groupType": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "userAccountControl"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												},
												"whenCreated": {
													"type": "object",
													"additionalProperties": false,
													"properties": {
														"show": {
															"type": "boolean",
															"default": true
														},
														"header": {
															"type": "string",
															"default": "whenCreated"
														},
														"hidable": {
															"type": "boolean",
															"default": true
														}
													}
												}
											}
										}
									}
								}
							}
						},
						"ousPage": {
							"type": "object",
							"description": "configuration reggarding the ous page",
							"additionalProperties": false,
							"properties": {
								"show": {
									"type": "boolean",
									"default": false,
									"description": "Weather or not to show the /ous page in navigation. Accessing directly to this route will result on a '403 This page has been disabled by configuration' error"
								}
							}
						},
						"treePage": {
							"type": "object",
							"description": "configuration reggarding the tree page",
							"additionalProperties": false,
							"properties": {
								"show": {
									"type": "boolean",
									"default": false,
									"description": "Weather or not to show the /tree page in navigation. Accessing directly to this route will result on a '403 This page has been disabled by configuration' error"
								}
							}
						},
						"logsPage": {
							"type": "object",
							"description": "configuration reggarding the logs page",
							"additionalProperties": false,
							"properties": {
								"show": {
									"type": "boolean",
									"default": false,
									"description": "Weather or not to show the /logs page in navigation. Accessing directly to this route will result on a '403 This page has been disabled by configuration' error"
								}
							}
						},
						"settingsPage": {
							"type": "object",
							"additionalProperties": false,
							"description": "configuration reggarding the settings page",
							"properties": {
								"showConfigurationForm": {
									"type": "boolean",
									"default": true,
									"description": "Weather or not to allow the user to change the configuration. @default false"
								}
							}
						}
					}
				},
				"captchaLength": {
					"type": "integer",
					"minimum": 1,
					"maximum": 9,
					"default": 5,
					"description": "Length of the captcha shown in the authentication page, recommended to use a low value for development.5"
				}
			}
		},
		"directory": {
			"additionalProperties": false,
			"description": "Directory management configuration settings",
			"properties": {
				"users": {
					"additionalProperties": false,
					"type": "object",
					"description": "Directory settings reggarding user management",
					"properties": {
						"hide": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"uniqueItems": true,
							"default": [],
							"description": "The list of user distinguishedNames or sAMAccountNames that should not be shown in the /users view dropdowns and search. Accessing directly to /users/[dn] of a user that is listed here will result on a '403 This user is hidden by configuration' error, however, signing in as a listed user will not result in error. @default []"
						},
						"limit": {
							"type": ["integer", "null"],
							"minimum": 0,
							"default": null,
							"description": "The maximum amount of users allowed in the directory. If set to null the limit will be ignored. Default users are included in the count. @default null"
						}
					}
				},
				"groups": {
					"additionalProperties": false,
					"type": "object",
					"description": "Directory settings reggarding group management",
					"properties": {
						"hide": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"uniqueItems": true,
							"default": [],
							"description": "The list of group distinguishedNames or sAMAccountNames that should not be shown in the /groups view dropdowns and search. Accessing directly to /groups/[dn] of a user that is listed here will result on a '403 This user is hidden by configuration' error. @default []"
						},
						"limit": {
							"type": ["integer", "null"],
							"minimum": 0,
							"default": null,
							"description": "The maximum amount of groups allowed in the directory. If set to null the limit will be ignored. Default groups are included in the count. @default null"
						}
					}
				}
			}
		}
	}
}
