{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"title": "Config",
	"description": "Application configuration settings",
	"required": ["app", "directory", "system", "$schema"],
	"properties": {
		"system": {
			"additionalProperties": false,
			"type": "object",
			"description": "System settings",
			"required": ["logging"],
			"properties": {
				"logging": {
					"additionalProperties": false,
					"type": "object",
					"description": "Logging settings",
					"required": ["use_logging"],
					"properties": {
						"use_logging": {
							"type": "boolean",
							"default": true,
							"description": "Enable or disable logging"
						},
						"paths": {
							"additionalProperties": false,
							"type": "object",
							"required": ["app_logs_path", "system_logs_path"],
							"description": "Logging paths",
							"properties": {
								"app_logs_path": {
									"type": "string",
									"description": "Path to the app logs\n\n@default logs/app/",
									"default": "logs/app/",
									"format": "path",
									"pattern": "^\\./logs\\/.*$"
								},
								"system_logs_path": {
									"type": "string",
									"description": "Path to the system logs\n\n@default logs/system/",
									"default": "logs/system/",
									"format": "path",
									"pattern": "^\\./logs\\/.*$"
								}
							}
						}
					},
					"if": {
						"properties": {
							"use_logging": {
								"const": true
							}
						}
					},
					"then": {
						"required": ["paths"]
					},
					"else": {
						"properties": {
							"paths": {
								"not": {}
							}
						},
						"required": []
					}
				}
			}
		},
		"app": {
			"additionalProperties": false,
			"description": "Interface configuration settings",
			"properties": {
				"captcha_length": {
					"type": "integer",
					"minimum": 1,
					"maximum": 9,
					"default": 5,
					"description": "Length of the captcha shown in the authentication page, recommended to use a low value for development.\n\n@default 5"
				}
			}
		},
		"directory": {
			"additionalProperties": false,
			"description": "Directory management configuration settings",
			"required": ["users", "groups"],
			"properties": {
				"users": {
					"additionalProperties": false,
					"type": "object",
					"description": "Directory settings reggarding user management",
					"required": ["hide", "limit"],
					"properties": {
						"hide": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"uniqueItems": true,
							"default": [],
							"description": "The list of user distinguishedNames or sAMAccountNames that should not be shown in the list view and dropdowns\n\n@default []"
						},
						"limit": {
							"type": ["integer", "null"],
							"minimum": 0,
							"default": null,
							"description": "The maximum amount of users allowed in the directory. If set to null the limit will be ignored.\n\n@default null"
						}
					}
				},
				"groups": {
					"additionalProperties": false,
					"type": "object",
					"description": "Directory settings reggarding group management",
					"required": ["hide", "limit"],
					"properties": {
						"hide": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"uniqueItems": true,
							"default": [],
							"description": "The list of group distinguishedNames or sAMAccountNames that should not be shown in the list view and dropdowns\n\n@default []"
						},
						"limit": {
							"type": ["integer", "null"],
							"minimum": 0,
							"default": null,
							"description": "The maximum amount of groups allowed in the directory. If set to null the limit will be ignored.\n\n@default null"
						}
					}
				}
			}
		}
	}
}
