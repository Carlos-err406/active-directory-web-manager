{
	"name": "active-directory-web-manager",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node -r dotenv/config build",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"prepare": "husky",
		"app:config": "npx json2ts -i src/config/schemas/index.schema.json -o src/config/app.config.d.ts --cwd=src/config/schemas",
		"watch:config": "chokidar src/config/schemas/ --initial -c \"npm run app:config\""
	},
	"lint-staged": {
		"*": [
			"prettier --write",
			"prettier --check",
			"eslint"
		]
	},
	"devDependencies": {
		"@adobe/jsonschema2md": "^8.0.2",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/ldapjs": "^3.0.6",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.16",
		"dayjs": "^1.11.10",
		"deepmerge": "^4.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"husky": "^9.0.11",
		"json-schema-library": "^9.3.5",
		"json-schema-to-typescript": "^14.0.5",
		"jsonwebtoken": "^9.0.2",
		"lint-staged": "^15.2.2",
		"lucide-svelte": "^0.365.0",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.0",
		"svelte-headless-table": "^0.18.2",
		"svelte-legos": "^0.2.2",
		"sveltekit-logger-hook": "^2.2.2",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"uuid": "^9.0.1",
		"vitest": "^1.2.0"
	},
	"dependencies": {
		"@internationalized/date": "^3.5.4",
		"bits-ui": "^0.21.10",
		"chokidar-cli": "^3.0.0",
		"clsx": "^2.1.0",
		"cmdk-sv": "^0.0.17",
		"dotenv": "^16.4.5",
		"formsnap": "^1.0.0",
		"ldapts": "^7.0.11",
		"mode-watcher": "^0.3.0",
		"svelte-radix": "^1.1.0",
		"svelte-sonner": "^0.3.21",
		"sveltekit-superforms": "^2.12.6",
		"tailwind-merge": "^2.2.2",
		"tailwind-variants": "^0.2.1",
		"tailwindcss-animation-delay": "^1.2.0",
		"vanilla-captcha": "^2.0.16",
		"vaul-svelte": "^0.3.0",
		"zod": "^3.23.5"
	},
	"type": "module"
}
